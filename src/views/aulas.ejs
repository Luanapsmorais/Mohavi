<%- include('partials/header') %>

<main>
    <section class="aulas-lista">
        <div class="container">
            <h1>Veja nossas aulas</h1>

            <% aulas.forEach(aula=>{ %>
            <article class="card-aula" >
                <% if (aula.image) { %>
                <img src="images/<%= aula.imagem %>" alt=""> 
                <% } else { %> 
                <div class="thumb"></div>
                <% } %>
                <div class="info">
                    <h2><%= aula.nome %> </h2>
                    <p> R$ <%= aula.valor %>,00 </p>
                    <p><%= aula.descricao %> </p>
                    <p><%= aula.turno.nome %> </p>
                    <a href="#" class="btn btn-primary">Escolher</a>
                </div>
            </article>
            <% }) %>
        </div>
    </section>
</main>

<%- include('partials/footer') %>