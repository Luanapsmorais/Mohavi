<%- include('partials/header') %>

<main>
    <section class="admin-cadastro"> 
        <div class="container">
            <% if (aula) { %>
                <h1>Editar Aulasz</h1>
            <% } else { %>
                <h1>Cadastro de Aulas</h1>
            <% } %>

            <% if (aula) { %>
            <form action="/cadastroAluno/editar/<%= aula.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <% } else { %>
            <form action="/cadastroAluno/cadastro/" method="POST" enctype="multipart/form-data">
            <% } %>
                <div class="align-row form-control">
                    <div class="field">
                        <label for="nome">Nome da aula</label>
                        <input type="text" id="email" name="nome" value="<% if (aula) { %><%= aula.nome %><% } %>">
                    </div>
                    <div class="field">
                        <label for="descricao">Descrição do Aula</label>
                        <input type="descricao" id="email" name="descricao" value="<% if (aula) { %><%= aula.email %><% } %>">
                    </div>
 
                    <label for="preco">Preço da Aula</label>
                    <input type="number" id="preco" name="preco">

                    <button class="btn btn-primary" type="submit">Enviar</button>
            
            </form>  
        </div>
        
    </section>
</main>
<%- include('partials/footer') %>