<%- include('partials/header') %>

<main>
    <section class="servicos-lista">
        <div class="container">
            <h1>Veja nossos Servi√ßos</h1>

            <% for (const servico of servicos) { %>
            <article>
                <% if (servico.image) { %>
                <img src=" /images/<%= servico.image %>" alt=""> 
                <% } else { %> 
                <div class="thumb"></div>
                <% } %>
                <div class="info">
                    <h2><%= servico.nome %> </h2>
                    <p><%= servico.valor %> </p>
                    <p><%= servico.descricao %> </p>
                    <a href="#" class="btn btn-primary">Escolher</a>
                </div>
            </article>
            <% } %>
        </div>
    </section>
</main>

<%- include('partials/footer') %>